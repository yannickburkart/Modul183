@model M183.Models.CBUserModel

@{
    ViewBag.Title = "Login";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<style type="text/css">
    .bs-example {
        height: 220px;
    }

    .centerlook {
        padding-left: 400px;
        font-weight: bold;
        width: 1000px;
    }

    .error {
        
        font-weight: bold;
        width: 1000px;
        color: red;
    }

    .field-validation-error {
        color: Red;
    }

    .loginbtn {
        padding-left: 500px;
    }

    .form-control {
    }
</style>

<div class="row">
    <div class=”col-lg-8 col-lg-offset-2" style="margin-top:60px;">
        <form class="well" action="~/GAuth/Login" method="post">
            <label style="color:#333;">Username</label>
            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UserName)
            <br />
            <label style="color:#333;">Password</label>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password)
            <br />
            <label style="color:#333;">Token</label>
            @Html.EditorFor(model => model.Token, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Token)            <div class="form-group error">
                @if (@ViewBag.Failedcount != null)
                {

                    <label> Failed Attempt count is: @ViewBag.Failedcount</label>
                }

                @if (@ViewBag.NotValidUser != null)
                {

                    <label> @ViewBag.NotValidUser</label>
                }
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        @Html.ActionLink("QR code", "SetupAuthentication", "GAuth")


    </div>
</div>


